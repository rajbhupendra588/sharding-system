FROM golang:1.21-alpine AS builder

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the manager
RUN CGO_ENABLED=0 GOOS=linux go build -a -installsuffix cgo -o bin/manager ./cmd/manager

# Final stage
FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata
WORKDIR /root/

COPY --from=builder /app/bin/manager .
COPY --from=builder /app/configs ./configs

EXPOSE 8081 9091

CMD ["./manager"]

