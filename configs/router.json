{
  "server": {
    "host": "0.0.0.0",
    "port": 8080,
    "read_timeout": "30s",
    "write_timeout": "30s",
    "idle_timeout": "120s"
  },
  "metadata": {
    "type": "etcd",
    "endpoints": ["localhost:2379"],
    "timeout": "5s"
  },
  "sharding": {
    "strategy": "hash",
    "hash_function": "murmur3",
    "vnode_count": 256,
    "replica_policy": "replica_ok",
    "max_connections": 100,
    "connection_ttl": "5m"
  },
  "security": {
    "enable_tls": false,
    "enable_rbac": false
  },
  "observability": {
    "metrics_port": 9090,
    "enable_tracing": false,
    "log_level": "info"
  }
}

