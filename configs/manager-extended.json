{
  "server": {
    "host": "0.0.0.0",
    "port": 8081,
    "read_timeout": "30s",
    "write_timeout": "30s",
    "idle_timeout": "120s"
  },
  "metadata": {
    "type": "etcd",
    "endpoints": ["localhost:2389"],
    "timeout": "5s"
  },
  "sharding": {
    "strategy": "hash",
    "hash_function": "murmur3",
    "vnode_count": 256,
    "replica_policy": "replica_ok",
    "max_connections": 100,
    "connection_ttl": "5m"
  },
  "pricing": {
    "tier": "enterprise"
  },
  "security": {
    "enable_tls": true,
    "enable_rbac": true,
    "audit_log_path": "/var/log/sharding/audit.log"
  },
  "observability": {
    "metrics_port": 9091,
    "enable_tracing": true,
    "tracing_endpoint": "jaeger:4317",
    "log_level": "info"
  },
  "discovery": {
    "enabled": true,
    "type": "kubernetes",
    "namespaces": [],
    "resync_interval": "30s"
  },
  "monitoring": {
    "prometheus": {
      "enabled": true,
      "collection_interval": "15s"
    },
    "postgres_stats": {
      "enabled": true,
      "collection_interval": "30s"
    }
  },
  "health": {
    "check_interval": "10s",
    "startup_timeout": "60s"
  },
  "logging": {
    "level": "info",
    "format": "json",
    "loki_endpoint": "http://loki:3100"
  },
  "hot_reload": {
    "enabled": true,
    "check_interval": "10s"
  },
  "backup": {
    "storage": {
      "type": "s3",
      "endpoint": "s3.amazonaws.com",
      "region": "us-west-2",
      "bucket_prefix": "sharding-backups",
      "use_ssl": true
    },
    "retention": "720h",
    "continuous_backup": true
  },
  "tracing": {
    "enabled": true,
    "service_name": "sharding-manager",
    "otlp_endpoint": "jaeger:4317",
    "sample_rate": 0.1
  },
  "multiregion": {
    "enabled": false,
    "local_region": "us-west-2",
    "failover_enabled": true
  },
  "disaster_recovery": {
    "enabled": false,
    "primary_region": "us-west-2",
    "failover_regions": ["us-east-1"],
    "rpo": "60s",
    "rto": "300s",
    "auto_failover": true
  },
  "autoscale": {
    "enabled": true,
    "namespace": "sharding-system"
  }
}

